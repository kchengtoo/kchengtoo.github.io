# mod_rewrite starts here

RewriteEngine On

# does not apply to exisiting directories, meaning that if the folder exists on the server then don't change anything and don't run the Rule!

RewriteCond %{REQUEST_FILENAME} !-d

# Check for file in the directory with .html extension

RewriteCond %{REQUEST_FILENAME}\.html -f

# Checks that if the specified file or directory respectively doesn't exist, then the rewrite rule proceeds:

RewriteRule ^(.*)\.html$ /$1 [L,R=301]

Options -Indexes
